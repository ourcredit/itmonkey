{
    "extends": "standard",
    "root": true,
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [ "html", "standard" ],
    "rules": {
        "indent": 0,
        "quotes":0,
        "semi": 0,
        "no-console": ["error"],
        "no-empty": 2,
        "no-eq-null": 2,
        "no-new": 0,
        "no-fallthrough": 0,
        "no-unreachable": 0,
        "space-before-function-paren":0,
        "no-undef":0,
        "eol-last":0,
        "operator-linebreak":0,
        "no-extra-boolean-cast":0,
        "no-unused-expressions":0,
        "space-unary-ops":0,
        "vue/no-parsing-error":[0, { "x-invalid-end-tag": false }]
    }
}
